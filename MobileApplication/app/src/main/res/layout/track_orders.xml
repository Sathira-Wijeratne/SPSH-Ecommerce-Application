<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".TrackOrdersActivity">

    <!-- Title Text: My Orders -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Orders"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- Central Circle: My Orders -->
    <TextView
        android:id="@+id/myOrdersCircle"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="My Orders"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:backgroundTint="@color/blue"
        android:background="@drawable/circle_shape"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp" />

    <!-- Top Left Circle: Delivered -->
    <TextView
        android:id="@+id/deliveredCircle"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="Delivered"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:backgroundTint="@color/green"
        android:background="@drawable/circle_shape"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/myOrdersCircle"
        android:layout_marginTop="120dp"
        android:layout_marginStart="40dp" />

    <!-- Top Right Circle: Completed -->
    <TextView
        android:id="@+id/completedCircle"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="Completed"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:backgroundTint="@color/red"
        android:background="@drawable/circle_shape"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/myOrdersCircle"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="40dp" />

    <!-- Bottom Left Circle: Processing -->
    <TextView
        android:id="@+id/processingCircle"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="Processing"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:backgroundTint="@color/orange"
        android:background="@drawable/circle_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/myOrdersCircle"
        android:layout_marginBottom="120dp"
        android:layout_marginStart="40dp" />

    <!-- Bottom Right Circle: Cancelled -->
    <TextView
        android:id="@+id/cancelledCircle"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="Cancelled"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:backgroundTint="@color/purple"
        android:background="@drawable/circle_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/myOrdersCircle"
        android:layout_marginBottom="120dp"
        android:layout_marginEnd="40dp" />

    <!-- Bottom Middle Circle: Requested to Cancel -->
    <TextView
        android:id="@+id/requestedToCancelCircle"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="Requested to Cancel"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:backgroundTint="@color/yellow"
        android:background="@drawable/circle_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="60dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
