<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".TrackOrdersActivity">

    <!-- Title Text: My Orders -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Orders"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- 2x2 Grid of Buttons -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/buttonGrid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/requestedToCancelCircle"
        android:layout_margin="24dp">

        <!-- Delivered Button -->
        <Button
            android:id="@+id/deliveredCircle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Delivered"
            android:textSize="16sp"
            android:backgroundTint="@color/green"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/completedCircle"
            app:layout_constraintBottom_toTopOf="@+id/processingCircle"
            app:layout_constraintWidth_percent="0.45"
            app:layout_constraintHeight_percent="0.45" />

        <!-- Completed Button -->
        <Button
            android:id="@+id/completedCircle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Completed"
            android:textSize="16sp"
            android:backgroundTint="@color/red"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/deliveredCircle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/cancelledCircle"
            app:layout_constraintWidth_percent="0.45"
            app:layout_constraintHeight_percent="0.45" />

        <!-- Processing Button -->
        <Button
            android:id="@+id/processingCircle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Processing"
            android:textSize="16sp"
            android:backgroundTint="@color/orange"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@+id/deliveredCircle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/cancelledCircle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_percent="0.45"
            app:layout_constraintHeight_percent="0.45" />

        <!-- Cancelled Button -->
        <Button
            android:id="@+id/cancelledCircle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Cancelled"
            android:textSize="16sp"
            android:backgroundTint="@color/purple"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@+id/completedCircle"
            app:layout_constraintStart_toEndOf="@+id/processingCircle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_percent="0.45"
            app:layout_constraintHeight_percent="0.45" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Fifth Button: Requested to Cancel -->
    <Button
        android:id="@+id/requestedToCancelCircle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Requested to Cancel"
        android:textSize="14sp"
        android:backgroundTint="@color/yellow"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/buttonGrid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
